<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.boston"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="18" />
    <uses-permission android:name="android.permission.SET_WALLPAPER"/>

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.example.boston.Splash"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
         <activity
            android:name="com.example.boston.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="com.example.boston.MAINACTIVITY" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.boston.Menu"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="com.example.boston.MENU" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.boston.TextPlay"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name="com.example.boston.Email"
            android:label="@string/app_name" >
        </activity>
         <activity
            android:name="com.example.boston.Camera"
            android:label="Camera Application" 
            android:screenOrientation="portrait">
            
        </activity>
    </application>

</manifest>
